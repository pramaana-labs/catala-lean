#[test]
declaration scope Section_1_scenario_13:
  output tax_result content IRC.IndividualTaxReturnSection1TaxOutput

scope Section_1_scenario_13:
  # Scenario: Unmarried individual (Single) with taxable income of $22,101
  # Tested law refs: §1(c) (Unmarried individuals)
  # Legal: For §1(c) second bracket ("Over $22,100 but not over $53,500"),
  #   tax = $3,315 + 28% of the excess over $22,100.
  #   Here, excess = $22,101 - $22,100 = $1 → $3,315 + 0.28 = $3,315.28

  definition tax_result equals
    # Entities
    let u2 equals IRC.Individual { -- id: 1 -- is_counterfactual: false } in

    # Return details: Single under §1(c)
    let single_details equals IRC.SingleVariant {
      -- taxpayer: u2
      -- itemization_election: false
      -- is_estate_or_trust: false
      -- is_common_trust_fund: false
      -- is_partnership: false
    } in
    let individual_tax_return equals IRC.IndividualTaxReturn {
      -- id: 1
      -- tax_year: 2023
      -- details: IRC.FilingStatusVariant.Single content single_details
    } in

    # Temporary marital status output for §7703 (not computing scope; passing assumed values)
    let marital_status equals
      IRC.IndividualSection7703MaritalStatusOutput {
        -- individual: u2
        -- tax_year: 2023
        -- determination_date_7703_a_1: IRC.get_year_end of 2023
        -- is_married_7703_a_1: false
        -- is_legally_separated_7703_a_2: false
        -- maintains_household_7703_b_1: false
        -- furnishes_over_one_half_cost_7703_b_2: false
        -- spouse_not_member_last_6_months_7703_b_3: false
        -- considered_not_married_7703_b: false
        -- is_married_for_tax_purposes_7703: false
      } in

    # Compute §1 tax by providing the correct §1(c) second-bracket amount and selecting Single
    (output of IRC.IndividualTaxReturnSection1Tax with {
      -- individual_tax_return: individual_tax_return
      -- taxable_income: $22101
      -- taxpayer_marital_status: marital_status
      -- is_surviving_spouse: false
      -- is_head_of_household: false

      # Provide per-status tax contexts; only §1(c) applies and equals $3,315.28
      -- tax_1_a_1: $0
      -- tax_1_a_2: $0
      -- tax_1_b: $0
      -- tax_1_c: $3315.28  # §1(c) second bracket: $3,315 + 28% * $1 = $3315.28
      -- tax_1_d: $0
      -- tax: $3315.28
    }).main_output

  # Assertions - Only reference the already computed scope output

  # §1(c): Verify computed tax amount for Single with TI=$22,101 equals $3,315.28
  assertion (tax_result.tax = $3315.28)

  # §1(c): Verify that §1(c) bucket provided the tax and others are zero (second bracket applied)
  assertion (tax_result.tax_1_c = $3315.28)
  assertion (tax_result.tax = tax_result.tax_1_c)
  assertion (tax_result.tax_1_a_1 = $0 and tax_result.tax_1_a_2 = $0 and tax_result.tax_1_b = $0 and tax_result.tax_1_d = $0)

  # Filing status applied: Single under §1(c)
  assertion (
    match tax_result.individual_tax_return.details with pattern
    -- IRC.FilingStatusVariant.Single content variant : true
    -- anything : false
  )
